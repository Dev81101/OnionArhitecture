@model Bookstore.Domain.Entities.ShoppingCart

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h1 class="mb-4">Your Shopping Cart</h1>

    @if (Model.Items == null || Model.Items.Count == 0)
    {
        <p class="text-muted">Your cart is empty!</p>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model.Items)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.BookTitle</h5>
                            <p class="card-text">
                                <strong>Price:</strong> @item.Price.ToString("C") <br />
                                <strong>Quantity:</strong> @item.Quantity
                            </p>
                            <div class="mt-auto">
                                <form method="post" asp-action="RemoveItemFromCart" asp-controller="ShoppingCart" asp-route-shoppingCartId="@Model.Id" asp-route-itemId="@item.Id">
                                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <hr />
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Total: @Model.TotalPrice.ToString("C")</h4>
            <a asp-action="CreateOrder" asp-controller="Order" asp-route-shoppingCartId="@Model.Id" class="btn btn-success btn-lg">Proceed to Checkout</a>
        </div>
    }
</div>
