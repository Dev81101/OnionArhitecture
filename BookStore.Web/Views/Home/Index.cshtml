@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <!-- Welcome Section -->
    <h1 class="text-center mb-4">Welcome to Bookstore</h1>

    <!-- Hero Section -->
    <div class="jumbotron bg-light text-dark p-5 rounded shadow mb-4">
        <div class="row align-items-center">
            <div class="col-md-8">
                <h2 class="display-5 font-weight-bold">Discover Your Next Favorite Book</h2>
                <p class="lead">Welcome to our Bookstore. Explore a wide range of books, authors, and publishers. Start your literary journey today!</p>
            </div>
        </div>
    </div>

    <!-- Cart Button with Icon -->
    <div class="text-right mb-4 me-5">
        <a href="@Url.Action("Index", "ShoppingCart")" class="btn btn-success btn-lg">
            <i class="fa fa-shopping-cart"></i> View Cart
        </a>
    </div>

    <!-- Featured Books Section -->
    <h3 class="mt-5 text-center">Featured Books</h3>
    <p class="text-center text-muted mb-4">Handpicked collection of popular and trending books for you.</p>
    <div class="row g-4 mt-3">
        @foreach (var book in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card h-100 shadow-sm border-0">
                    <!-- Book Image -->
                    @if (!string.IsNullOrEmpty(book.ImagePath))
                    {
                        <img class="card-img-top rounded-top" src="@book.ImagePath" alt="@book.Title" style="height: 250px; object-fit: cover;" />
                    }
                    else
                    {
                        <img src="/images/placeholder.png" class="card-img-top rounded-top" alt="Placeholder" style="height: 250px; object-fit: cover;" />
                    }

                    <div class="card-body d-flex flex-column">
                        <!-- Book Title -->
                        <h5 class="card-title text-truncate">@book.Title</h5>

                        <!-- Author, Publisher, and Price -->
                        <p class="card-text text-muted">
                            <strong>Author:</strong> @book.Author?.Name <br />
                            <strong>Publisher:</strong> @book.Publisher?.Name <br />
                            <strong>Price:</strong> @book.Price.ToString("C")
                        </p>

                        <!-- Add to Cart Button -->
                        <form method="post" asp-action="AddToCart" class="mt-auto">
                            <input type="hidden" name="bookId" value="@book.Id" />
                            <button type="submit" class="btn btn-primary btn-block">Add to Cart</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
