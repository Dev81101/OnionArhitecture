@model Bookstore.Domain.Entities.Book

@{
    ViewData["Title"] = "Add New Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add New Book</h1>

<h4>Book</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Title Field -->
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Price Field -->
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" step="0.01" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Author Dropdown -->
            <div class="form-group">
                <label asp-for="AuthorId" class="control-label"></label>
                <select asp-for="AuthorId" class="form-control">
                    <option value="">Select an Author</option>
                    @foreach (var author in ViewBag.Authors as SelectList)
                    {
                        <option value="@author.Value" >
                            @author.Text
                        </option>
                    }
                </select>
                <span asp-validation-for="AuthorId" class="text-danger"></span>
            </div>

            <!-- Publisher Dropdown -->
            <div class="form-group">
                <label asp-for="PublisherId" class="control-label"></label>
                <select asp-for="PublisherId" class="form-control">
                    <option value="">Select a Publisher</option>
                    @foreach (var publisher in ViewBag.Publishers as SelectList)
                    {
                        <option value="@publisher.Value" >
                            @publisher.Text
                        </option>
                    }
                </select>
                <span asp-validation-for="PublisherId" class="text-danger"></span>
            </div>

            <!-- Image Upload -->
            <div class="form-group">
                <label asp-for="ImagePath" class="control-label"></label>
                <input type="file" class="form-control" id="Image" name="Image" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
