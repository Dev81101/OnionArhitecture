@model Bookstore.Domain.Entities.Book

@{
    ViewData["Title"] = "Delete Book";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>Delete Book</h1>
    <p>Are you sure you want to delete this book?</p>
    <dl class="row">
        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@Model.Title</dd>

        <dt class="col-sm-3">Author</dt>
        <dd class="col-sm-9">@Model.Author.Name</dd>

        <dt class="col-sm-3">Publisher</dt>
        <dd class="col-sm-9">@Model.Publisher.Name</dd>

        <dt class="col-sm-3">Price</dt>
        <dd class="col-sm-9">@Model.Price</dd>
    </dl>

    <form asp-action="ConfirmDelete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
