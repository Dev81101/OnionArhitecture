@model IEnumerable<Bookstore.Domain.Entities.Book>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Books";
}

<div class="container">
    <h1 class="text-center my-4">Books</h1>

    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(book.ImagePath))
                    {
                        <img src="@book.ImagePath" class="card-img-top" alt="@book.Title" style="height: 200px; object-fit: cover;" />
                    }
                    else
                    {
                        <img src="/images/placeholder.png" class="card-img-top" alt="Placeholder" style="height: 200px; object-fit: cover;" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@book.Title</h5>
                        <p class="card-text">
                            <strong>Author:</strong> @book.Author?.Name <br />
                            <strong>Publisher:</strong> @book.Publisher?.Name <br />
                            <strong>Price:</strong> $@book.Price
                        </p>
                        <div class="mt-auto">
                            <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-warning btn-sm me-2">Edit</a>
                            <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <a asp-action="Create" class="btn btn-primary mt-3">Add New Book</a>
</div>
