@model IEnumerable<Bookstore.Domain.Entities.Author>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Authors";
}

<h2>Authors</h2>
<a asp-action="Create" class="btn btn-primary">Add New Author</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Books</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Name</td>
                <td>
                    @foreach (var book in author.Books)
                    {
                        <span>@book.Title</span>

                        <br />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@author.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@author.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
